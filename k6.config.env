# K6 TypeScript Configuration
# Copy this file to .env and customize as needed

# Test Configuration
K6_TEST_NAME="K6 TypeScript Load Test"
K6_TEST_ENVIRONMENT="development"

# Load Test Settings
K6_LOAD_TEST_DURATION="5m"
K6_LOAD_TEST_VUS="20"
K6_LOAD_TEST_MAX_VUS="50"

# Stress Test Settings  
K6_STRESS_TEST_DURATION="10m"
K6_STRESS_TEST_VUS="50"
K6_STRESS_TEST_MAX_VUS="100"

# API Test Settings
K6_API_TEST_DURATION="3m"
K6_API_TEST_VUS="15"
K6_API_BASE_URL="https://reqres.in/api"

# Basic Test Settings
K6_BASIC_TEST_DURATION="2m"
K6_BASIC_TEST_VUS="10"
K6_BASIC_BASE_URL="https://httpbin.org"

# Thresholds Configuration
K6_THRESHOLD_P95_DURATION="500"
K6_THRESHOLD_P99_DURATION="1000"
K6_THRESHOLD_ERROR_RATE="0.05"
K6_THRESHOLD_MIN_REQUESTS="100"
K6_THRESHOLD_LOGIN_SUCCESS_RATE="rate>0.95"
K6_THRESHOLD_API_ERRORS="count<50"
K6_THRESHOLD_USER_CREATION_TIME="p(95)<800"

# Report Configuration
K6_REPORT_TITLE="Performance Test Report"
K6_REPORT_AUTHOR="Load Testing Team"
K6_REPORT_OPEN_BROWSER="true"

# Output Configuration
K6_OUTPUT_FORMAT="json"
K6_SUMMARY_EXPORT="true"
K6_QUIET_MODE="false"
K6_VERBOSE_MODE="false"

# Advanced Settings
K6_HTTP_DEBUG="false"
K6_NO_CONNECTION_REUSE="false"
K6_NO_VU_CONNECTION_REUSE="false"
K6_MIN_ITERATION_DURATION="1s"
K6_MAX_REDIRECTS="10"
K6_BATCH_SIZE="20"
K6_BATCH_PER_HOST="5"
